{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/functions/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.html"],
  "exclude": ["src/**/*.test.ts", "node_modules"]
}